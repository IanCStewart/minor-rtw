<!DOCTYPE html>
<html>

  <head>
    <%- include ../partials/meta -%>
    <link rel="stylesheet" type="text/css" href="/css/pages/home.css">
    <title>Index</title>
  </head>

  <body>
    <%- include ../partials/header %>
    <main>
      <% if (playlists.length > 0) { playlists.forEach(function (playlist) { %>
        <section class="playlist">
          <div style="background-image: url(<%= playlist.images[0] %>)"></div>
          <h1><%= playlist.name %></h1>
          <h2><%= playlist.owner %></h2>
        </section>
      <% }); } else { %>
        <p class="empty-state">There are no playlists yet, go and make a new one!</p>
      <% } %>
      <a class="button" href="/add-playlist">New playlist</a>
    </main>
    <%- include ../partials/footer -%>
  </body>
</html>
